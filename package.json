{
	"name": "sapphiredev",
	"version": "1.0.0",
	"description": "GitHub app bot that we use in Sapphire to automate our work",
	"author": "@sapphire <contact@sapphirejs.dev>",
	"license": "MIT",
	"private": true,
	"main": "dist/index.js",
	"scripts": {
		"debug": "node scripts/DebugRun.mjs",
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"build": "tsc -b src",
		"watch": "tsc -b src -w",
		"clean": "node scripts/clean.mjs",
		"vercel-build": "ncc build src/index.ts -o api",
		"update": "yarn up \"*\" -i",
		"commit": "git-cz",
		"cz": "git-cz",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"@sapphire/fetch": "^2.0.4",
		"dotenv-cra": "^3.0.2",
		"probot": "^12.2.1",
		"tslib": "^2.3.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.1.0",
		"@commitlint/config-conventional": "^16.0.0",
		"@sapphire/eslint-config": "^4.0.11",
		"@sapphire/prettier-config": "^1.2.9",
		"@sapphire/ts-config": "^3.1.8",
		"@types/node": "^17.0.8",
		"@typescript-eslint/eslint-plugin": "^5.10.0",
		"@typescript-eslint/parser": "^5.10.0",
		"@vercel/ncc": "^0.33.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "~8.7.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.0",
		"prettier": "^2.5.1",
		"pretty-quick": "^3.1.3",
		"smee-client": "^1.2.2",
		"typescript": "^4.5.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/sapphiredev.git"
	},
	"bugs": {
		"url": "https://github.com/sapphiredev/sapphiredev/issues"
	},
	"homepage": "https://github.com/sapphiredev/sapphiredev#README",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"prettier": "@sapphire/prettier-config",
	"eslintConfig": {
		"extends": "@sapphire"
	},
	"packageManager": "yarn@3.1.1"
}
