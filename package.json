{
	"name": "sapphiredev",
	"version": "1.0.0",
	"description": "GitHub app bot that we use in Sapphire to automate our work",
	"author": "@sapphire <contact@sapphirejs.dev>",
	"license": "MIT",
	"private": true,
	"main": "dist/index.js",
	"scripts": {
		"debug": "node scripts/DebugRun.mjs",
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"build": "tsc -b src",
		"watch": "tsc -b src -w",
		"clean": "node scripts/clean.mjs",
		"vercel-build": "ncc build src/index.ts -o api",
		"update": "yarn upgrade-interactive --latest",
		"commit": "git-cz",
		"cz": "git-cz",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"@sapphire/fetch": "^1.0.5",
		"dotenv-cra": "^2.2.0",
		"probot": "^11.4.1",
		"tslib": "^2.3.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.2.0",
		"@commitlint/config-conventional": "^13.2.0",
		"@sapphire/eslint-config": "^3.2.3",
		"@sapphire/prettier-config": "^1.1.6",
		"@sapphire/ts-config": "^2.3.2",
		"@types/node": "^16.9.1",
		"@types/node-fetch": "^2.5.12",
		"@vercel/ncc": "^0.31.1",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^7.0.2",
		"lint-staged": "^11.1.2",
		"pretty-quick": "^3.1.1",
		"smee-client": "^1.2.2",
		"typescript": "^4.4.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/sapphiredev.git"
	},
	"bugs": {
		"url": "https://github.com/sapphiredev/sapphiredev/issues"
	},
	"homepage": "https://github.com/sapphiredev/sapphiredev#README",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^6.0.1",
		"lodash": "^4.17.21",
		"marked": "^2.1.3",
		"merge": "^2.1.1",
		"trim": "^1.0.1"
	},
	"prettier": "@sapphire/prettier-config",
	"eslintConfig": {
		"extends": "@sapphire/eslint-config"
	}
}
