{
	"name": "sapphiredev",
	"version": "1.0.0",
	"description": "GitHub app bot that we use in Sapphire to automate our work",
	"author": "@sapphire <contact@sapphirejs.dev>",
	"license": "MIT",
	"private": true,
	"main": "dist/index.js",
	"scripts": {
		"debug": "node scripts/DebugRun.mjs",
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"build": "tsc -b src",
		"watch": "tsc -b src -w",
		"clean": "node scripts/clean.mjs",
		"vercel-build": "ncc build src/index.ts -o api",
		"update": "yarn upgrade-interactive",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"@sapphire/fetch": "^2.3.1",
		"dotenv-cra": "^3.0.2",
		"probot": "^12.2.2",
		"tslib": "^2.4.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.0",
		"@commitlint/config-conventional": "^17.0.0",
		"@sapphire/eslint-config": "^4.3.5",
		"@sapphire/prettier-config": "^1.4.3",
		"@sapphire/ts-config": "^3.3.4",
		"@types/node": "^17.0.31",
		"@typescript-eslint/eslint-plugin": "^5.25.0",
		"@typescript-eslint/parser": "^5.25.0",
		"@vercel/ncc": "^0.33.4",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^12.4.1",
		"prettier": "^2.6.2",
		"pretty-quick": "^3.1.3",
		"smee-client": "^1.2.3",
		"typescript": "^4.6.4"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.6"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"prettier": "@sapphire/prettier-config",
	"eslintConfig": {
		"extends": "@sapphire"
	},
	"packageManager": "yarn@3.2.1"
}
