{
	"name": "sapphiredev",
	"version": "1.0.0",
	"description": "GitHub app bot that we use in Sapphire to automate our work",
	"author": "@sapphire <contact@sapphirejs.dev>",
	"license": "MIT",
	"private": true,
	"main": "dist/index.js",
	"scripts": {
		"debug": "node scripts/DebugRun.mjs",
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"build": "tsc -b src",
		"watch": "tsc -b src -w",
		"clean": "node scripts/clean.mjs",
		"vercel-build": "ncc build src/index.ts -o api",
		"update": "yarn upgrade-interactive",
		"postinstall": "husky install .github/husky"
	},
	"dependencies": {
		"@sapphire/fetch": "^2.4.1",
		"dotenv-cra": "^3.0.3",
		"probot": "^12.3.1",
		"tslib": "^2.6.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@sapphire/eslint-config": "^5.0.1",
		"@sapphire/prettier-config": "^2.0.0",
		"@sapphire/ts-config": "^4.0.1",
		"@types/node": "^18.17.6",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"@vercel/ncc": "^0.36.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.3.0",
		"prettier": "^3.0.2",
		"smee-client": "^1.2.3",
		"typescript": "^5.1.6"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.8"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write",
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"prettier": "@sapphire/prettier-config",
	"eslintConfig": {
		"extends": "@sapphire"
	},
	"packageManager": "yarn@3.6.2"
}
