{
	"name": "sapphiredev",
	"version": "1.0.0",
	"description": "GitHub app bot that we use in Sapphire to automate our work",
	"author": "@sapphire <contact@sapphirejs.dev>",
	"license": "MIT",
	"private": true,
	"main": "dist/index.js",
	"scripts": {
		"debug": "node scripts/DebugRun.mjs",
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"build": "tsc -b src",
		"watch": "tsc -b src -w",
		"clean": "node scripts/clean.mjs",
		"vercel-build": "ncc build src/index.ts -o api",
		"dev": "run-s build start",
		"update": "yarn upgrade-interactive --latest",
		"commit": "git-cz",
		"cz": "git-cz",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"@sapphire/fetch": "^1.0.3",
		"dotenv-cra": "^2.0.2",
		"probot": "^11.4.1",
		"tslib": "^2.3.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@sapphire/eslint-config": "^3.1.4",
		"@sapphire/prettier-config": "^1.1.3",
		"@sapphire/ts-config": "^2.2.3",
		"@types/node": "^15.12.4",
		"@types/node-fetch": "^2.5.10",
		"@vercel/ncc": "^0.28.6",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"nock": "^13.1.0",
		"npm-run-all": "^4.1.5",
		"pretty-quick": "^3.1.1",
		"smee-client": "^1.2.2",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.4"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/sapphiredev.git"
	},
	"bugs": {
		"url": "https://github.com/sapphiredev/sapphiredev/issues"
	},
	"homepage": "https://github.com/sapphiredev/sapphiredev#README",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^6.0.1",
		"lodash": "^4.17.21",
		"marked": "^2.0.7",
		"merge": "^2.1.1",
		"trim": "^1.0.1"
	},
	"prettier": "@sapphire/prettier-config"
}
